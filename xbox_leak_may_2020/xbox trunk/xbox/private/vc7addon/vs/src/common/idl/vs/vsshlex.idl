library VsShellExLib
{
	importlib("stdole32.tlb");
	importlib("stdole2.tlb");
[
	uuid(64AC2451-BD18-11d1-87B5-00A0C91E2A46),
	helpstring("IVsPackageStaticExData Interface"),
	pointer_default(unique),
	local
]
interface IVsPackageStaticExData : IUnknown
{
	// Get static ExData from the VsPackage. The data returned is
	// owned by the callee and *must* be static data. The caller
	// should *not* attempt to free the data. The lifetime of the
	// data is assumed to be valid as long as the VsPackage object
	// is alive. Thus this method is not remotable.
	[local]
	HRESULT GetStaticExData(
				[in]  REFGUID rguidData,
				[out] ULONG *pcbData,
				[out] unsigned short **ppData,
				[out] ULONG *pcMaxRecords);
};
};
