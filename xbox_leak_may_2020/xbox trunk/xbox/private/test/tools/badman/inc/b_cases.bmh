//
// BOOL type
//

        // boolean TRUE
#define BOOL_TRUE           5

        // boolean FALSE
#define BOOL_FALSE          6


//
// LPBITMAP type
//

        // LPBITMAP null
#define LPBITMAP_NULL           1

        // A valid LPBITMAP
#define LPBITMAP_VALID          2


//
// LPBITMAPINFO type
//

        // LPBITMAPINFO null
#define LPBITMAPINFO_NULL       1

        // (LPBITMAPINFO)-1
#define LPBITMAPINFO_MINUS_ONE  2

        // Valid LPBITMAPINFO
#define LPBITMAPINFO_VALID      3


//
// LPBITMAPINFOHEADER
//

        // LPBITMAPINFOHEADER null
#define LPBITMAPINFOHEADER_NULL         1

        // (LPBITMAPINFOHEADER)-1
#define LPBITMAPINFOHEADER_MINUS_ONE    2

        // valid LPBITMAPINFOHEADER 
#define LPBITMAPINFOHEADER_VALID        3


//
// LPBOOL type
//

        // A null buffer
#define LPBOOL_NULL             3

        // A valid buffer
#define LPBOOL_VALID_BUFFER     4

    	// An invalid pointer
#define	LPBOOL_INVALID			5

	    // An unaligned pointer
#define	LPBOOL_MALALIGNED		6


//
// LPBYTE type
//

        // 13 pt. types for PolyDraw
#define LPBYTE_13_PTS           1

        // 13 non-pt types for PolyDraw
#define LPBYTE_BAD_13_PTS       2

        // NULL ptr for polydraw
#define LPBYTE_NULL             3
