TARGETNAME=vigil
TARGETTYPE=PROGRAM
TARGETPATH=obj
UMTYPE=xboxapp
UMENTRY=wWinMainCRTStartup

TARGETLIBS=\
    $(LIBRARY_PATH)\d3d8$(D).lib \
    $(LIBRARY_PATH)\xgraphics$(D).lib

