'$include 'install.inc'


Scenario "SDK Clean Full Setup - Cancel at Program Folder Screen, using buttons"
	Dim xdkpath$

	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	end if

	Install(BuildNumber, false, false, 5)

	if IsInstalled then
		FAIL "Installation should have cancelled"
	end if
Scenario Cleanup
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	else
		Sleep 5
	end if
End Scenario

