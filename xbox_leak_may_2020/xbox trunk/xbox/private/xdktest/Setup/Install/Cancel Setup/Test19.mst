'$include 'install.inc'


Scenario "SDK Clean Updater Setup - Cancel at Updater Startup Dialog, using buttons"
	Dim xdkpath$

	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	end if

	Install(BuildNumber, true, false, 0)

	if IsInstalled then
		FAIL "Installation should have cancelled"
	end if
Scenario Cleanup
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	else
		Sleep 5
	end if
End Scenario

