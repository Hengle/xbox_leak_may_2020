'$include 'install.inc'


scenario "Verify SDK Updater Setup registry keys and values"
	Dim FileArray$(0,3), RegArray$(0,3)
	Dim item%, pass%
	Dim xdkpath$

	pass = true
	'
	' Clean up if necessary
	'
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	end if
	'
	' Default install
	'
	Install(BuildNumber, true, false)
	'
	' Get File Contents
	'
	VerifyFile(5, FileArray, RegArray)
	'
	' If upper bound > 0 then there were files returned
	'
	if ubound(RegArray, 1) <> 0 then
		pass = false
		LOG #10, "FAIL: The following "+trim$(str$(ubound(RegArray, 1)))+" registry entries are mismatched from the reference"
		for item = lbound(RegArray, 1) to ubound(RegArray, 1)-1
			LOG #10, "   "+RegArray(item, 0)+" should be ["+RegArray(item,1)+"] but actually is ["+RegArray(item,2)+"]"
		next item
	end if
	'
	' If failed, the flag error
	'
	if NOT pass then
		FAIL "Some registry keys/valyes are mismatched from reference list"
	end if
Scenario Cleanup
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	else
		Sleep 5
	end if
end scenario


' *************************
' ***** END TEST CASE *****
' *************************
End
  