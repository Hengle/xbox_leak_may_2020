'$include 'install.inc'

Scenario "SDK Clean Updater Setup - Default values, using hotkeys"
	Dim xdkpath$
	'
	' Uninstall if needed
	'
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	end if
	'
	' Install Updater setup using buttons
	'
	Install(BuildNumber, true, true)
Scenario Cleanup
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	else
		Sleep 5
	end if
End Scenario

