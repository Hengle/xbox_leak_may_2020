'$include 'install.inc'


Scenario "SDK Clean Updater Setup - Default values, using buttons"
	Dim xdkpath$
	'
	' Uninstall if needed
	'
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	end if
	'
	' Install Updater setup using hotkeys
	'
	Install(BuildNumber, true, false)
Scenario Cleanup
	if IsInstalled then
		xdkpath = GetXDKPath()
		Uninstall
		if exists(xdkpath, "+d") then killdir(xdkpath)
	else
		Sleep 5
	end if
End Scenario


