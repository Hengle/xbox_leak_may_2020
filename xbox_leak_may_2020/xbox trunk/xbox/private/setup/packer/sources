MAJORCOMP=setup
MINORCOMP=xpacker

TARGETNAME=xpacker
TARGETPATH=obj
TARGETTYPE=PROGRAM
UMTYPE=console
NOT_UNICODE=1
USE_LIBC=1
USE_NATIVE_EH=1

!if "$(NTDEBUG)" != ""
MSC_OPTIMIZATION=/Odi
!endif

INCUDES=..\common

SOURCES= \
        packer.cpp   \
        dirs.cpp     \
        manifest.cpp \
        plist.cpp    \
        resource.cpp \
        cabfile.cpp  \
        filehash.cpp \
        packer.rc


TARGETLIBS= \
        ..\common\$(O)\common.lib \
        $(LIBRARY_PATH)\fci.lib
        
              
PRECOMPILED_INCLUDE=packer.h
PRECOMPILED_PCH=packerpch.pch
PRECOMPILED_OBJ=packerpch.obj
PRECOMPILED_CXX=1
