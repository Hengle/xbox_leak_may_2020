CBASE=$(CBASE) -DRM_HEAPMGR=1 -D_NT1X_=100
CBASE=$(CBASE) -DNVD3D -DNVD3D_DX6=1

NVOPT= -DNV4 -DNVARCH=$(NVARCH)
D3DOPT= -DDX8 -DNVPE

C_DEFINES=$(C_DEFINES) $(CBASE) $(NVOPT) $(D3DOPT) -DDIRECT3D_VERSION=0x0800 -DNVSTATDRIVER

