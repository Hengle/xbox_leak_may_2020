NVCHIP=NV4
NVARCH=0x04
TARGETNAME=nv4ddrw
TARGETTYPE=LIBRARY

# The following source files do not appear to be necessary for NT5 builds. They
# appear to contain DX5 support only):
#           d3dstate.c
!IFNDEF TARGETPATH
TARGETPATH=$(BASEDIR)\lib
!ENDIF

