<script language=LimitedVBScript directmusicversion=8.0.0.0>

dim VIsPlaying
dim seg

sub TStop
	PerformanceStop
end sub

sub TLoad
	set seg = LoadSegment("sample.sgt")
end sub

sub TPlay
	seg.Download
	PlaySegment seg
end sub

sub TIsPlaying
	VIsPlaying = IsPlaying(seg)
end sub
