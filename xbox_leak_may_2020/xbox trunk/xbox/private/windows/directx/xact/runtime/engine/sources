C_DEFINES=$(C_DEFINES) -DDPF_LIBRARY=\"XACTENG\" -DNAMESPACE=XACT -DDPFLVL_DEFAULT=4
C_DEFINES=$(C_DEFINES) -DXACTVER 

INCLUDES=\
    $(SDK_INC_PATH);\
    $(PRIVATE_INC_PATH);\
    $(BASEDIR)\private\ntos\inc;\
    $(INCLUDES)

TARGETNAME = xacteng$(D)

NTTARGETFILES = \
    $(XDK_LIB_PATH)\$(TARGETNAME).lib


